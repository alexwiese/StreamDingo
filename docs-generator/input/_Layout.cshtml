    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background: #ffffff;
            color: #333;
        }
        
        .navbar {
            background: #343a40;
            color: white;
            padding: 1rem;
            border-bottom: 3px solid #00d7ff;
        }
        
        .navbar-brand {
            color: white;
            text-decoration: none;
            font-size: 1.25rem;
            font-weight: bold;
        }
        
        .nav-link {
            color: #adb5bd;
            text-decoration: none;
            margin-left: 1rem;
        }
        
        .nav-link:hover {
            color: #00d7ff;
        }
        
        .container-fluid {
            display: flex;
            min-height: calc(100vh - 60px);
        }
        
        .sidebar {
            width: 250px;
            background: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 1rem;
            overflow-y: auto;
        }
        
        .sidebar h6 {
            color: #6c757d;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            margin: 1.5rem 0 0.5rem 0;
            padding: 0 0.75rem;
        }
        
        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .sidebar li {
            margin: 0;
        }
        
        .sidebar .nav-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: #495057;
            text-decoration: none;
            margin: 0;
            border-radius: 0.25rem;
        }
        
        .sidebar .nav-link:hover {
            background: #e9ecef;
            color: #007bff;
        }
        
        main {
            flex: 1;
            padding: 2rem;
            overflow-x: auto;
        }
        
        h1, h2, h3, h4, h5, h6 {
