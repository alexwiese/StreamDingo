# Set default behavior for all files
* text=auto

# Force text files to have CRLF line endings on checkout
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.slnx text eol=crlf
*.md text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.txt text eol=crlf
*.config text eol=crlf

# Force binary files to be binary
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.7z binary
*.tar.gz binary